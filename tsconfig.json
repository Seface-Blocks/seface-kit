{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "typings",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@interfaces/*": ["./src/interfaces/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },

  "include": [ "./src/**/*.ts", "index.d.ts"],
  "exclude": [ ]
}
