{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./build/@types",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build/src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {}
  },

  "include": [ "./src"],
  "exclude": [ ]
}
